<div class="signup_wrap">
  <div class="site_container">
     <%= render :partial => "sidebar" %>
    
    <div class="verticalside">
      <div class="form_for">
    	<%= form_for(@addincome,:url => home_addincomecreate_path) do |f| %>  
				
			      <div class="field">
               <label><%= f.label :source  %><br /></label>
               <% @source = current_user.categories.where("type =?","IncomeCategory") %>

              <%= f.select :category_id,options_for_select( @source.all.collect { |c|[c.source,c.id ] }),{:prompt => "Select category"},:id => "select-location", :class => "txtbox" %>
            </div>
          
            <div class="field">
               <label><%= f.label :amount %><br /></label>
               <%= f.text_field :amount,:class => "txtbox" %>
            </div>
            
            <%= f.hidden_field :user_id,:value => current_user.id  %>
            <div class="field">
               
               <%= f.submit "submit",:class => "txtbox" %>
            </div>

    	<% end %>
      </div>
    </div>
  </div>
</div>
<div class="clear_fix"></div>