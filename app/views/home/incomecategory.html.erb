<div class="signup_wrap">
  <div class="site_container">
    <div class="signup">
    	<%= form_for( @category,:url => home_incomecategorycreate_path) do |f| %>  
				
			<div class="field">
               <label><%= f.label :source  %><br /></label>
               <%= f.select :incomesource,options_for_select( Incomesource.all.collect { |c|[c.name,c.name ] }),{:prompt => "Select source"},:id => "select-location", :class => "txtbox" %>
            </div>
          
            <div class="field">
               <label><%= f.label :Description %><br /></label>
               <%= f.text_area :desc, autofocus: true, :class => "txtbox" %>
            </div>
            
            <%= f.hidden_field :user_id,:value => current_user.id  %>
            <div class="field">
               
               <%= f.submit "submit",:class => "txtbox" %>
            </div>

    	<% end %>
    </div>
  </div>
</div>