<div class="signup_wrap">
  <div class="site_container">
    <div class="signup">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <label><%= f.label :name %><br /></label>
          <%= f.text_field :name, autofocus: true, :class => "txtbox" %>
        </div>
        <div class="field">
          <label><%= f.label :email %><br /></label>
          <%= f.email_field :email, autofocus: true, :class => "txtbox" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off",:class => "txtbox" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off",:class => "txtbox" %>
        </div>
        

        <div class="actions">
          <%= f.submit "Sign up", :class => "txtbox" %>
        </div>

      <% end %>

      <%#= render "users/shared/links" %>
    </div>
  </div>
</div>
